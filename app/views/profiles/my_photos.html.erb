<% @photos.each do |photo| %>
        
  <div class="card photo-card">
   <div class="card-body">

     <div class="img-box">
        <%= link_to photo do %>
         <%= image_tag photo.image.url(:medium), class: 'image-link'  %>
        <%end%>
      </div> <br>
     <strong><%= photo.description %></strong> <br>
          
       <%= link_to edit_photo_path(photo) do %>
        <i class="icon ion-edit"></i> Изменить 
       <% end %> |  
       <%= link_to photo, method: :delete, data: { confirm: 'Are you sure?' } do %>
         <i class="icon ion-trash-b"></i> Удалить
       <% end %>
       <br>
       
   </div>
  </div>
        
<% end %> <br><br>
    
<div class="down-center">
  <div class="pagination">
    <%= will_paginate @photos, renderer: WillPaginate::ActionView::BootstrapLinkRenderer %>
  </div>
</div>